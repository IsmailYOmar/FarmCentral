@model ST10120867_FarmCentral.Models.Login

@{
    ViewBag.Title = "Login";
}
<style>
    .Uname {
        margin: auto;
        font-size: 40px;
        height: 50px;
        width: 90%;
        padding: 15px;
        border-color: #84918E;
        border-radius: 10px;
        background-color: transparent;
        margin: 0px 0px 15px 20px;
        color: #84918E;
    }

    .Pass {
        margin: auto;
        font-size: 40px;
        height: 50px;
        width: 90%;
        padding: 15px;
        border-color: #84918E;
        border-radius: 10px;
        background-color: transparent;
        margin: 0px 0px 15px 20px;
        color: #84918E;
    }

    label {
        font-size: 50px;
        margin: 15px 0px 5px 20px;
        color: #84918E;
    }

    #Login {
        position: fixed;
        bottom: 40px;
        left: 35%;
        font-size: 35px;
        height: 45px;
        width: 30%;
        border-radius: 12px;
        background-color: #C7F5DC;
        border: solid;
        border-width: 2px;
        border-color: #84918E;
    }

    .Login:hover {
        opacity: 0.8;
    }

    .validationMessage {
        color: #ffaa65;
        margin: 0px 0px 0px 20px;
    }
</style>

<div class="logo">
    <a href="/Home/Index">
        <img src="~/Images/FarmCentral_Logo.png" />
    </a>
</div>

<!--form thats passes data to controller using model -->
<div class="loginBorder">
    @using (Html.BeginForm())
    {<!--Validation defined in model-->
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "validationMessage" })
        <label><b>Username</b></label>
        <br />
        @Html.EditorFor(model => model.userName, new { htmlAttributes = new { @class = "Uname", placeholder = "Username" } })
        <br />
        @Html.ValidationMessageFor(model => model.userName, "", new { @class = "validationMessage" })
        <br />
        <label><b>Password</b></label>
        <br />
        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "Pass", placeholder = "Password" } })
        <br />
        @Html.ValidationMessageFor(model => model.password, "", new { @class = "validationMessage" })
        <input type="submit" class="Login" id="Login" value="Login" />
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
